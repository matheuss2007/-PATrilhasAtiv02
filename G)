using System;

namespace atv_2
{
	class Program
	{
		public static void Main(string[] args)
		{
		Console.WriteLine("Digite um numero:");
			int num1 = Convert.ToInt32(Console.ReadLine());
			Console.WriteLine("seu primeiro numero é:" + num1);
			
			Console.WriteLine("Digite um numero:");
			int num2 = Convert.ToInt32(Console.ReadLine());
			Console.WriteLine("seu segundo numero é:" + num2);
			
			
			
			int subitracao= num1-num2;
			Console.WriteLine("a subitracao do primeiro numero pelo segundo e :" + subitracao);
			
			
			
			Console.Write("Pressione algo para fechar . . . ");
			Console.ReadKey(true);
		}
	}
}
